{
  "name": "@wikisophia/api-client",
  "version": "0.6.0",
  "browser": "dist",
  "description": "Wikisophia API javascript client",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node rollup.build.js -min",
    "docs-dev": "documentation build src/main.js -f md -o API.md --watch",
    "docs": "documentation build src/main.js -f md -o API.md",
    "dev": "BABEL_ENV=build rollup -c -w",
    "lint": "eslint src test --fix && stylelint \"src/**/*.css\" && documentation lint src",
    "lint-nofix": "eslint src test && stylelint \"src/**/*.css\" && documentation lint src",
    "serve": "node rollup.build.js && http-server -p 4041 ./dist",
    "test": "BABEL_ENV=test jest",
    "test-coverage": "BABEL_ENV=test jest -c jest.config.coverage.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babelrc-rollup": "^3.0.0",
    "clean-css": "^4.1.11",
    "documentation": "^7.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "fs-extra": "^6.0.1",
    "http-server": "^0.11.1",
    "jest": "^23.1.0",
    "postcss-syntax": "^0.10.0",
    "regenerator-runtime": "^0.11.1",
    "rollup": "^0.59.4",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-uglify": "^3.0.0",
    "stylelint": "^9.2.1",
    "stylelint-config-recommended": "^2.1.0",
    "xhr-mock": "^2.4.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wikisophia/api-js-client.git"
  },
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/wikisophia/api-js-client/issues"
  },
  "homepage": "https://github.com/wikisophia/api-js-client#readme"
}
